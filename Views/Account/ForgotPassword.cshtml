<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="margin-top: 50px; border: none; border-radius: 15px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); padding: 20px;">
                <div class="card-header text-center" style="background-color: red; border-radius: 15px 15px 0 0; color: white;">
                    <h3>Forgot Password</h3>
                </div>
                <div class="card-body" style="padding: 20px;">
                    @Html.ValidationSummary(true, "", new { @class = "validation-summary" })
                    <form method="post" asp-action="ForgotPassword" asp-controller="Account">
                        <div class="form-group">
                            <label for="email">Enter your email address:</label>
                            <input name="email" type="email" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block" style="background-color: red; border: none; border-radius: 10px;margin-top:13px">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>